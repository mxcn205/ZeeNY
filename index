<script>
let currentSection = 0;
const totalSections = 8;
let currentSlide = 0;
const totalSlides = 3;
let currentPolaroid = 0;
let polaroidAnimationPlayed = new Set();
let isInSpotlight = false;
let currentSongPhase = 0;
let currentAudio = null;

const polaroids = [
  'assets/ZeeNYPolaroid1.png',
  'assets/ZeeNYPolaroid2.png',
  'assets/ZeeNYPolaroid3.png',
  'assets/ZeeNYPolaroid5.png',
  'assets/ZeeNYPolaroid6.png',
  'assets/ZeeNYPolaroid7.png',
  'assets/ZeeNYPolaroid8.png'
];

function showSection(index) {
  if (currentAudio) {
    currentAudio.pause();
    currentAudio.currentTime = 0;
    currentAudio = null;
  }
  
  document.querySelectorAll('.section').forEach((sec, i) => {
    sec.classList.toggle('active', i === index);
  });
  
  if (index === 1) resetAndShowAesthetics();
  else if (index === 2) resetAndShowGoodTimes();
  else if (index === 3) resetAndShowTweets();
  else if (index === 4) resetAndShowSongs();
  else if (index === 5) handleRecapSection();
  else if (index === 6) resetAndShowForward();
}

function resetAndShowAesthetics() {
  const intro1 = document.getElementById('intro-1-1');
  const intro2 = document.getElementById('intro-1-2');
  const container = document.getElementById('aesthetics-container');
  
  intro1.classList.add('active');
  intro2.classList.remove('active');
  intro1.style.display = 'flex';
  intro2.style.display = 'flex';
  container.style.display = 'none';
  
  const boards = container.querySelectorAll('.board');
  boards.forEach(board => {
    board.style.animation = 'none';
    board.offsetHeight;
    board.style.animation = null;
  });
  
  setTimeout(() => {
    intro1.classList.remove('active');
  }, 2500);
  
  setTimeout(() => {
    intro2.classList.add('active');
  }, 3200);
  
  setTimeout(() => {
    intro2.classList.remove('active');
  }, 10700);
  
  setTimeout(() => {
    intro1.style.display = 'none';
    intro2.style.display = 'none';
    container.style.display = 'block';
  }, 11400);
}

function resetAndShowGoodTimes() {
  const intro = document.getElementById('intro-2');
  const container = document.getElementById('goodtimes-container');
  
  intro.style.display = 'flex';
  container.style.display = 'none';
  
  const boards = container.querySelectorAll('.board');
  boards.forEach(board => {
    board.style.animation = 'none';
    board.offsetHeight;
    board.style.animation = null;
  });
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 16800);
}

function resetAndShowTweets() {
  const intro = document.getElementById('intro-3');
  const container = document.getElementById('tweets-container');
  
  intro.style.display = 'flex';
  container.style.display = 'none';
  container.innerHTML = '';
  
  currentPolaroid = 0;
  polaroidAnimationPlayed.clear();
  isInSpotlight = false;
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
    showPolaroid(0);
  }, 8400);
}

function resetAndShowForward() {
  const intro = document.getElementById('intro-6');
  const container = document.getElementById('forward-container');
  
  intro.style.display = 'flex';
  container.style.display = 'none';
  
  const boards = container.querySelectorAll('.board');
  boards.forEach(board => {
    board.style.animation = 'none';
    board.offsetHeight;
    board.style.animation = null;
  });
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 19600);
}

function showPolaroid(index) {
  const container = document.getElementById('tweets-container');
  
  if (index >= polaroids.length) {
    showSpotlight();
    return;
  }
  
  currentPolaroid = index;
  
  if (!polaroidAnimationPlayed.has(index)) {
    container.innerHTML = '';
    const polaroid = document.createElement('div');
    polaroid.className = 'polaroid';
    polaroid.innerHTML = `<img src="${polaroids[index]}" alt="Tweet ${index + 1}">`;
    polaroid.style.animation = 'polaroidEnter 2.67s ease-in-out forwards';
    container.appendChild(polaroid);
    
    polaroidAnimationPlayed.add(index);
    
    setTimeout(() => {
      if (currentPolaroid === index && currentSection === 3) {
        if (currentPolaroid < polaroids.length - 1) {
          showPolaroid(currentPolaroid + 1);
        } else {
          showSpotlight();
        }
      }
    }, 2670);
  } else {
    container.innerHTML = '';
    const polaroid = document.createElement('div');
    polaroid.className = 'polaroid';
    polaroid.innerHTML = `<img src="${polaroids[index]}" alt="Tweet ${index + 1}">`;
    polaroid.style.opacity = '1';
    polaroid.style.transform = 'translate(-50%, -50%) rotate(-2deg)';
    container.appendChild(polaroid);
  }
}

function showSpotlight() {
  const container = document.getElementById('tweets-container');
  isInSpotlight = true;
  
  container.innerHTML = `
    <div class="spotlight-container">
      <div class="spotlight"></div>
      <div class="spotlight-text">And your top tweet of 2025 was…</div>
      <div class="spotlight-tweet">
        <img src="assets/ZeeNYTweet4.png" alt="Top Tweet">
      </div>
    </div>
  `;
}

function resetAndShowSongs() {
  const intro = document.getElementById('intro-4');
  const container = document.getElementById('songs-container');
  
  intro.style.display = 'flex';
  container.style.display = 'none';
  container.innerHTML = '';
  
  currentSongPhase = 0;
  if (currentAudio) {
    currentAudio.pause();
    currentAudio.currentTime = 0;
    currentAudio = null;
  }
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
    startSongsSequence();
  }, 8400);
}

function startSongsSequence() {
  const container = document.getElementById('songs-container');
  
  container.innerHTML = `
    <div class="podium-container" id="podium">
      <div class="podium-spot third" id="third-spot">
        <div class="song-cover" id="cover-3"></div>
        <div class="podium-block">3</div>
      </div>
      <div class="podium-spot first" id="first-spot">
        <div class="song-cover" id="cover-1"></div>
        <div class="podium-block">1</div>
      </div>
      <div class="podium-spot second" id="second-spot">
        <div class="song-cover" id="cover-2"></div>
        <div class="podium-block">2</div>
      </div>
    </div>
  `;
  
  setTimeout(() => zoomToThird(), 500);
}

function zoomToThird() {
  if (currentAudio) {
    currentAudio.pause();
    currentAudio.currentTime = 0;
    currentAudio = null;
  }
  
  currentSongPhase = 0;
  const podium = document.getElementById('podium');
  
  podium.style.transform = 'translateX(calc(-50% + 300px)) scale(1.6)';
  podium.style.bottom = 'calc(50vh - 670px)';
  
  setTimeout(() => {
    const cover = document.getElementById('cover-3');
    if (!cover.innerHTML) {
      cover.innerHTML = '<img src="assets/ZeeNYSongCover3.png" alt="Song 3">';
      cover.classList.add('visible');
    }
    
    currentAudio = new Audio('assets/ZeeNYSong3.mp3');
    currentAudio.play();
    currentAudio.onended = () => {
      setTimeout(() => zoomToSecond(), 800);
    };
  }, 1000);
}

function zoomToSecond(skipZoomTransition = false) {
  if (currentAudio) {
    currentAudio.pause();
    currentAudio.currentTime = 0;
    currentAudio = null;
  }
  
  currentSongPhase = 1;
  const podium = document.getElementById('podium');
  const cover2 = document.getElementById('cover-2');
  const alreadyRevealed = cover2.innerHTML !== '';
  
  if (skipZoomTransition || alreadyRevealed) {
    podium.style.transform = 'translateX(calc(-50% - 280px)) scale(1.6)';
    podium.style.bottom = 'calc(50vh - 750px)';
    
    setTimeout(() => {
      if (!cover2.innerHTML) {
        cover2.innerHTML = '<img src="assets/ZeeNYSongCover2.png" alt="Song 2">';
        cover2.classList.add('visible');
      }
      
      currentAudio = new Audio('assets/ZeeNYSong2.mp3');
      currentAudio.play();
      currentAudio.onended = () => {
        setTimeout(() => showTopSongDarken(), 800);
      };
    }, 1000);
  } else {
    podium.style.transform = 'translateX(-50%) scale(1)';
    podium.style.bottom = '5vh';
    
    setTimeout(() => {
      podium.style.transform = 'translateX(calc(-50% - 280px)) scale(1.6)';
      podium.style.bottom = 'calc(50vh - 750px)';
      
      setTimeout(() => {
        if (!cover2.innerHTML) {
          cover2.innerHTML = '<img src="assets/ZeeNYSongCover2.png" alt="Song 2">';
          cover2.classList.add('visible');
        }
        
        currentAudio = new Audio('assets/ZeeNYSong2.mp3');
        currentAudio.play();
        currentAudio.onended = () => {
          setTimeout(() => showTopSongDarken(), 800);
        };
      }, 1000);
    }, 1200);
  }
}

function showTopSongDarken() {
  if (currentAudio) {
    currentAudio.pause();
    currentAudio.currentTime = 0;
    currentAudio = null;
  }
  
  currentSongPhase = 2;
  const container = document.getElementById('songs-container');
  
  const podium = document.getElementById('podium');
  podium.style.transform = 'translateX(-50%) scale(1)';
  podium.style.bottom = '5vh';
  
  setTimeout(() => {
    const darken = document.createElement('div');
    darken.className = 'songs-darken';
    darken.innerHTML = '<div class="songs-text">And your top song for 2025 was...<br>(according to me at least)</div>';
    container.appendChild(darken);
    
    setTimeout(() => zoomToFirst(), 3000);
  }, 800);
}

function zoomToFirst(skipZoomTransition = false) {
  if (currentAudio) {
    currentAudio.pause();
    currentAudio.currentTime = 0;
    currentAudio = null;
  }
  
  currentSongPhase = 3;
  const container = document.getElementById('songs-container');
  const darken = container.querySelector('.songs-darken');
  if (darken) darken.remove();
  
  const podium = document.getElementById('podium');
  
  podium.style.transform = 'translateX(calc(-50% + 20px)) scale(1.6)';
  podium.style.bottom = 'calc(50vh - 830px)';
  
  setTimeout(() => {
    const cover1 = document.getElementById('cover-1');
    if (!cover1.innerHTML) {
      cover1.innerHTML = '<img src="assets/ZeeNYSongCover1.png" alt="Song 1">';
      cover1.classList.add('visible');
    }
    
    currentAudio = new Audio('assets/ZeeNYSong1.mp3');
    currentAudio.play();
  }, 1000);
}

function handleRecapSection() {
  const intro = document.getElementById('intro-5');
  const container = document.getElementById('recap-container');
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 8400);
}

function nextSection() {
  if (currentSection < totalSections - 1) {
    currentSection++;
    showSection(currentSection);
  }
}

function prevSection() {
  if (currentSection > 0) {
    currentSection--;
    showSection(currentSection);
  }
}

function changeSlide(direction) {
  const slides = document.querySelectorAll('.slide');
  const segments = document.querySelectorAll('.progress-segment');
  
  const oldSlide = currentSlide;
  const newSlide = currentSlide + direction;
  
  if (newSlide < 0) {
    prevSection();
    return;
  } else if (newSlide >= totalSlides) {
    nextSection();
    return;
  }
  
  slides[oldSlide].classList.remove('active');
  slides[oldSlide].classList.add(direction > 0 ? 'exit-left' : 'exit-right');
  
  currentSlide = newSlide;
  
  slides[currentSlide].classList.remove('exit-left', 'exit-right');
  if (direction > 0) {
    slides[currentSlide].classList.add('enter-from-right');
  } else {
    slides[currentSlide].classList.add('enter-from-left');
  }
  
  setTimeout(() => {
    slides[currentSlide].classList.remove('enter-from-right', 'enter-from-left');
    slides[currentSlide].classList.add('active');
  }, 50);
  
  segments.forEach((seg, i) => seg.classList.toggle('active', i === currentSlide));
}

document.getElementById('leftArrow').addEventListener('click', (e) => {
  e.stopPropagation();
  
  if (currentSection === 1) {
    const intro1 = document.getElementById('intro-1-1');
    const intro2 = document.getElementById('intro-1-2');
    const container = document.getElementById('aesthetics-container');
    
    if (container.style.display === 'block') {
      container.style.display = 'none';
      intro2.style.display = 'flex';
      setTimeout(() => intro2.classList.add('active'), 100);
      return;
    } else if (intro2.classList.contains('active')) {
      intro2.classList.remove('active');
      setTimeout(() => intro1.classList.add('active'), 100);
      return;
    } else if (intro1.classList.contains('active')) {
      prevSection();
      return;
    }
  }
  
  const intro = document.querySelector(`#intro-${currentSection}`);
  
  if (currentSection === 4) {
    if (intro && intro.style.display !== 'none') {
      prevSection();
      return;
    }
    
    if (currentSongPhase === 3) {
      if (currentAudio) {
        currentAudio.pause();
        currentAudio.currentTime = 0;
        currentAudio = null;
      }
      currentSongPhase = 1;
      const podium = document.getElementById('podium');
      podium.style.transform = 'translateX(calc(-50% - 280px)) scale(1.6)';
      podium.style.bottom = 'calc(50vh - 750px)';
      
      setTimeout(() => {
        currentAudio = new Audio('assets/ZeeNYSong2.mp3');
        currentAudio.play();
      }, 600);
    } else if (currentSongPhase === 1) {
      if (currentAudio) {
        currentAudio.pause();
        currentAudio.currentTime = 0;
        currentAudio = null;
      }
      currentSongPhase = 0;
      const podium = document.getElementById('podium');
      podium.style.transform = 'translateX(calc(-50% + 300px)) scale(1.6)';
      podium.style.bottom = 'calc(50vh - 670px)';
      
      setTimeout(() => {
        currentAudio = new Audio('assets/ZeeNYSong3.mp3');
        currentAudio.play();
      }, 600);
    } else {
      if (currentAudio) {
        currentAudio.pause();
        currentAudio.currentTime = 0;
        currentAudio = null;
      }
      resetAndShowSongs();
    }
    return;
  }
  
  if (currentSection === 3) {
    if (intro && intro.style.display !== 'none') {
      prevSection();
      return;
    }
    
    if (isInSpotlight) {
      showPolaroid(polaroids.length - 1);
      isInSpotlight = false;
    } else if (currentPolaroid > 0) {
      showPolaroid(currentPolaroid - 1);
    } else {
      prevSection();
    }
    return;
  }
  
  if (intro && intro.style.display !== 'none') {
    prevSection();
  } else if (currentSection === 5) {
    changeSlide(-1);
  } else {
    prevSection();
  }
});

document.getElementById('rightArrow').addEventListener('click', (e) => {
  e.stopPropagation();
  
  if (currentSection === 1) {
    const intro1 = document.getElementById('intro-1-1');
    const intro2 = document.getElementById('intro-1-2');
    const container = document.getElementById('aesthetics-container');
    
    if (intro1.classList.contains('active')) {
      intro1.classList.remove('active');
      setTimeout(() => intro2.classList.add('active'), 100);
      return;
    } else if (intro2.classList.contains('active')) {
      intro2.classList.remove('active');
      setTimeout(() => {
        intro1.style.display = 'none';
        intro2.style.display = 'none';
        container.style.display = 'block';
      }, 100);
      return;
    } else if (container.style.display === 'block') {
      nextSection();
      return;
    }
  }
  
  const intro = document.querySelector(`#intro-${currentSection}`);
  
  if (currentSection === 4) {
    if (intro && intro.style.display !== 'none') {
      const container = document.getElementById('songs-container');
      intro.style.display = 'none';
      container.style.display = 'block';
      startSongsSequence();
      return;
    }
    
    if (currentSongPhase === 0) {
      if (currentAudio) {
        currentAudio.pause();
        currentAudio = null;
      }
      setTimeout(() => zoomToSecond(), 800);
    } else if (currentSongPhase === 1) {
      if (currentAudio) {
        currentAudio.pause();
        currentAudio = null;
      }
      setTimeout(() => showTopSongDarken(), 800);
    } else if (currentSongPhase === 3) {
      if (currentAudio) {
        currentAudio.pause();
        currentAudio = null;
      }
      nextSection();
    }
    return;
  }
  
  if (currentSection === 3) {
    if (intro && intro.style.display !== 'none') {
      const container = document.getElementById('tweets-container');
      intro.style.display = 'none';
      container.style.display = 'block';
      showPolaroid(0);
      return;
    }
    
    if (isInSpotlight) {
      nextSection();
    } else if (currentPolaroid < polaroids.length - 1) {
      showPolaroid(currentPolaroid + 1);
    } else {
      showSpotlight();
    }
    return;
  }
  
  if (intro && intro.style.display !== 'none') {
    const container = document.getElementById(
      currentSection === 1 ? 'aesthetics-container' :
      currentSection === 2 ? 'goodtimes-container' :
      currentSection === 5 ? 'recap-container' :
      currentSection === 6 ? 'forward-container' : ''
    );
    if (container) {
      intro.style.display = 'none';
      container.style.display = 'block';
    }
  } else if (currentSection === 5) {
    changeSlide(1);
  } else {
    nextSection();
  }
});

document.addEventListener('keydown', (e) => {
  if (e.key === 'ArrowLeft') {
    document.getElementById('leftArrow').click();
  } else if (e.key === 'ArrowRight') {
    document.getElementById('rightArrow').click();
  } else if (currentSection === 5) {
    if (e.key === 'ArrowUp') prevSection();
    else if (e.key === 'ArrowDown') nextSection();
  }
});

document.getElementById('recap-container').addEventListener('click', (e) => {
  e.stopPropagation();
  const card = e.currentTarget;
  const rect = card.getBoundingClientRect();
  const clickX = e.clientX - rect.left;
  const halfWidth = rect.width / 2;
  
  if (clickX < halfWidth) {
    changeSlide(-1);
  } else {
    changeSlide(1);
  }
});

function restart() {
  currentSection = 0;
  currentSlide = 0;
  currentPolaroid = 0;
  currentSongPhase = 0;
  polaroidAnimationPlayed.clear();
  isInSpotlight = false;
  
  if (currentAudio) {
    currentAudio.pause();
    currentAudio.currentTime = 0;
    currentAudio = null;
  }
  
  showSection(0);
  
  const intro1 = document.getElementById('intro-1-1');
  const intro2 = document.getElementById('intro-1-2');
  if (intro1 && intro2) {
    intro1.style.display = 'flex';
    intro2.style.display = 'flex';
    intro1.classList.add('active');
    intro2.classList.remove('active');
  }
  
  document.querySelectorAll('[id^="intro-"]').forEach(intro => {
    if (intro.id !== 'intro-1-1' && intro.id !== 'intro-1-2') {
      intro.style.display = 'flex';
    }
  });
  document.querySelectorAll('[id$="-container"]').forEach(container => {
    container.style.display = 'none';
  });
  
  const slides = document.querySelectorAll('.slide');
  slides.forEach((s, i) => {
    s.classList.remove('active', 'exit-left', 'exit-right', 'enter-from-left', 'enter-from-right');
    if (i === 0) s.classList.add('active');
  });
  
  const segments = document.querySelectorAll('.progress-segment');
  segments.forEach((seg, i) => seg.classList.toggle('active', i === 0));
}

function openBoardFullscreen(imageSrc) {
  const modal = document.createElement('div');
  modal.className = 'board-fullscreen-modal';
  modal.innerHTML = `
    <div class="board-fullscreen-close"></div>
    <img src="${imageSrc}" alt="Board Fullscreen">
  `;
  document.body.appendChild(modal);
  
  setTimeout(() => modal.classList.add('active'), 10);
  
  const closeBtn = modal.querySelector('.board-fullscreen-close');
  const closeModal = () => {
    modal.classList.remove('active');
    setTimeout(() => modal.remove(), 400);
  };
  
  closeBtn.addEventListener('click', closeModal);
  modal.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });
}

setTimeout(() => {
  document.querySelectorAll('.board').forEach(board => {
    board.addEventListener('click', (e) => {
      e.stopPropagation();
      const img = board.querySelector('img');
      if (img) {
        openBoardFullscreen(img.src);
      }
    });
  });
}, 100);

</script>
</body>
</html>
