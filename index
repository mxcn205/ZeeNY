<script>
let currentSection = 0;
const totalSections = 8;
let currentSlide = 0;
const totalSlides = 3;
let currentPolaroid = 0;
let polaroidAnimationPlayed = new Set();
let isInSpotlight = false;
let currentSongPhase = 0; // 0: third, 1: second, 2: darken, 3: first
let currentAudio = null;

const polaroids = [
  'assets/ZeeNYPolaroid1.png',
  'assets/ZeeNYPolaroid2.png',
  'assets/ZeeNYPolaroid3.png',
  'assets/ZeeNYPolaroid5.png',
  'assets/ZeeNYPolaroid6.png',
  'assets/ZeeNYPolaroid7.png',
  'assets/ZeeNYPolaroid8.png'
];

function showSection(index) {
  document.querySelectorAll('.section').forEach((sec, i) => {
    sec.classList.toggle('active', i === index);
  });
  
  if (index === 1) resetAndShowAesthetics();
  else if (index === 2) resetAndShowGoodTimes();
  else if (index === 3) resetAndShowTweets();
  else if (index === 4) resetAndShowSongs();
  else if (index === 5) handleRecapSection();
  else if (index === 6) resetAndShowForward();
}

function resetAndShowAesthetics() {
  const intro = document.getElementById('intro-1');
  const container = document.getElementById('aesthetics-container');
  
  intro.style.display = 'flex';
  container.style.display = 'none';
  
  // Reset boards
  const boards = container.querySelectorAll('.board');
  boards.forEach(board => {
    board.style.animation = 'none';
    board.offsetHeight; // Trigger reflow
    board.style.animation = null;
  });
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 2800);
}

function resetAndShowGoodTimes() {
  const intro = document.getElementById('intro-2');
  const container = document.getElementById('goodtimes-container');
  
  intro.style.display = 'flex';
  container.style.display = 'none';
  
  // Reset boards
