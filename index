    board.style.animation = null;
  });
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 2800);
}

function resetAndShowTweets() {
  const intro = document.getElementById('intro-3');
  const container = document.getElementById('tweets-container');
  
  intro.style.display = 'flex';
  container.style.display = 'none';
  container.innerHTML = '';
  
  // Reset tweet state
  currentPolaroid = 0;
  polaroidAnimationPlayed.clear();
  isInSpotlight = false;
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
    showPolaroid(0);
  }, 2800);
}

function resetAndShowForward() {
  const intro = document.getElementById('intro-5');
  const container = document.getElementById('forward-container');
  
  intro.style.display = 'flex';
