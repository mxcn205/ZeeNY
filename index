  <!-- Intro placeholder text (keep it if you want; remove if not needed) -->
  <div class="intro" id="intro">
    <div class="card">The good times :)</div>
  </div>

  <div class="stage" id="stage">
    <!-- Good Times board -->
    <img
      id="boardGood"
      class="board wrap"
      src="ZeeNYBoardGoodTimes.png"
      alt="The Good Times board"
      data-order="0"
    />

    <!-- Added Thoughts board -->
    <img
      id="boardThoughts"
      class="board wrap"
      src="ZeeNYBoardThoughts.png"
      alt="Thoughts board"
      data-order="1"
    />

    <div class="hint">Hover to glow • Click a board to view • In viewer: ⟵ / ⟶ loops</div>
  </div>

  <!-- Modal viewer -->
  <div class="modal" id="modal" aria-hidden="true">
    <div class="modal-inner" id="modalInner">
      <div class="arrow left" id="prevBtn" aria-label="Previous">‹</div>
      <img class="modal-img" id="modalImg" alt="Full board view" />
      <div class="arrow right" id="nextBtn" aria-label="Next">›</div>
    </div>
  </div>

  <script>
    // Board order = left-to-right the same way it appears on the main screen.
    const boards = [
      { id: "boardGood", src: "ZeeNYBoardGoodTimes.png" },
      { id: "boardThoughts", src: "ZeeNYBoardThoughts.png" },
    ];

    const intro = document.getElementById("intro");
    const stage = document.getElementById("stage");
    const modal = document.getElementById("modal");
    const modalInner = document.getElementById("modalInner");
    const modalImg = document.getElementById("modalImg");
    const prevBtn = document.getElementById("prevBtn");
    const nextBtn = document.getElementById("nextBtn");

    let currentIndex = 0;

    function setModalImage(index){
      currentIndex = (index + boards.length) % boards.length; // loop
      modalImg.src = boards[currentIndex].src;
    }

    function openModal(index){
      setModalImage(index);
      modal.classList.add("open");
      modal.setAttribute("aria-hidden", "false");
      document.body.style.overflow = "hidden";
    }

    function closeModal(){
      modal.classList.remove("open");
      modal.setAttribute("aria-hidden", "true");
      document.body.style.overflow = "hidden";
    }

    function next(){
      setModalImage(currentIndex + 1);
    }

    function prev(){
      setModalImage(currentIndex - 1);
    }

    // Click boards -> open modal
    boards.forEach((b, idx) => {
      const el = document.getElementById(b.id);
      el.addEventListener("click", () => openModal(idx));
    });

    // Close modal by clicking outside the image (but not on arrows / image)
    modal.addEventListener("click", (e) => {
      if (e.target === modal) closeModal();
    });
    // Also treat clicking the dim area inside as close (outside content)
    modalInner.addEventListener("click", (e) => {
      // If they clicked the inner container but not the image or arrows
      const isArrow = e.target === prevBtn || e.target === nextBtn;
      const isImage = e.target === modalImg;
      if (!isArrow && !isImage) {
        // Clicking the padding around the image inside the modal closes
        closeModal();
      }
    });

    prevBtn.addEventListener("click", (e) => { e.stopPropagation(); prev(); });
    nextBtn.addEventListener("click", (e) => { e.stopPropagation(); next(); });

    // Keyboard nav in modal
    window.addEventListener("keydown", (e) => {
      if (!modal.classList.contains("open")) return;
      if (e.key === "ArrowLeft") prev();
      if (e.key === "ArrowRight") next();
      if (e.key === "Escape") closeModal();
    });

    // Intro fade then boards "push into position" together (no slideshow)
    function startIntro(){
      intro.classList.add("show");
      // show text briefly, then fade it out
      setTimeout(() => intro.classList.add("hide"), 2400);
      // once faded, bring boards in
      setTimeout(() => {
        intro.style.display = "none";
        document.body.classList.add("ready");
      }, 3200);
    }

    // If you want it instant (no text), comment startIntro() and just add 'ready' immediately.
    startIntro();
    // document.body.classList.add("ready");
  </script>
</body>
</html>
