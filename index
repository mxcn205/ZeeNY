    <div class="hint">
      <div>Tips: ← → keys • swipe • click dots • edit text inline</div>
      <div>Export: use your browser’s print to PDF (optional)</div>
    </div>
  </div>

  <div class="exportTip">Pro tip: Replace collage tiles with images later (see comments in code).</div>

  <script>
    // =========================
    // SLIDE NAV + TRANSITIONS
    // =========================
    const slides = Array.from(document.querySelectorAll('.slide'));
    const total = slides.length;
    let idx = 0;
    let isAnimating = false;

    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');

    // Build dot nav for each slide footer (so it's present on every slide)
    function buildDots(){
      slides.forEach((s, i) => {
        const footerDots = s.querySelector('.dots');
        if(!footerDots) return;
        footerDots.innerHTML = "";
        for(let k=0;k<total;k++){
          const d = document.createElement('div');
          d.className = 'dot' + (k===i ? ' active' : '');
          d.title = `Go to slide ${k+1}`;
          d.addEventListener('click', () => goTo(k));
          footerDots.appendChild(d);
        }
      });

      slides.forEach((s, i) => {
        const prog = s.querySelector('.progress');
        if (prog) prog.textContent = `${i+1} / ${total}`;
      });
    }

    function setDotStates(activeIndex){
      slides.forEach((s, i) => {
        const dots = s.querySelectorAll('.dot');
        dots.forEach((d, k) => {
          d.classList.toggle('active', k === activeIndex);
        });
      });
    }

    function goTo(nextIndex){
      if(isAnimating) return;
      if(nextIndex === idx) return;
      if(nextIndex < 0 || nextIndex >= total) return;

      isAnimating = true;

      const current = slides[idx];
      const next = slides[nextIndex];

      // determine direction for exit class
      const dir = nextIndex > idx ? 'right' : 'left';
      current.classList.remove('active');
      current.classList.add(dir === 'right' ? 'exiting-left' : 'exiting-right');

      // activate next
      next.classList.add('active');

      // cleanup exiting classes after transition ends
      window.setTimeout(() => {
        current.classList.remove('exiting-left', 'exiting-right');
        idx = nextIndex;
        setDotStates(idx);
        isAnimating = false;
      }, 560); // slightly above --t
    }

    function next(){ goTo(Math.min(total - 1, idx + 1)); }
    function prev(){ goTo(Math.max(0, idx - 1)); }

    prevBtn.addEventListener('click', prev);
    nextBtn.addEventListener('click', next);

    // Keyboard controls
    window.addEventListener('keydown', (e) => {
      // don't hijack keys when typing in textarea
      const tag = (document.activeElement && document.activeElement.tagName || "").toLowerCase();
      if(tag === 'textarea') return;

      if(e.key === 'ArrowRight' || e.key === 'PageDown') next();
      if(e.key === 'ArrowLeft'  || e.key === 'PageUp') prev();
      if(e.key === 'Home') goTo(0);
      if(e.key === 'End') goTo(total - 1);
    });

    // Touch swipe for mobile
    let startX = null, startY = null, startT = null;
    const frame = document.getElementById('frame');

    frame.addEventListener('touchstart', (e) => {
      const t = e.touches[0];
      startX = t.clientX; startY = t.clientY; startT = Date.now();
    }, {passive:true});

    frame.addEventListener('touchend', (e) => {
      if(startX === null) return;
      const t = e.changedTouches[0];
      const dx = t.clientX - startX;
      const dy = t.clientY - startY;
      const dt = Date.now() - startT;

      // ignore vertical scroll-like gestures
      if(Math.abs(dy) > Math.abs(dx)) { startX=null; startY=null; return; }

      // quick swipe threshold
      if(dt < 600 && Math.abs(dx) > 50){
        if(dx < 0) next();
        else prev();
      }
      startX=null; startY=null;
    }, {passive:true});

    // Initialize
    buildDots();
    setDotStates(idx);

    // =========================
    // OPTIONAL: HOW TO ADD IMAGES
    // =========================
    // Easiest: replace a tile's contents with an <img> tag:
    //   <div class="tile span3 row2">
    //     <img src="img/outfit1.jpg" style="width:100%;height:100%;object-fit:cover;" />
    //     <span class="label">Hero outfit</span>
    //   </div>
    //
    // Or set a background image in CSS inline:
    //   <div class="tile span3 row2" style="background:url('img/outfit1.jpg') center/cover no-repeat;">
    //
    // For Moment slots, replace the .slot div with:
    //   <div class="slot"><img ... /></div>
  </script>
</body>
</html>
