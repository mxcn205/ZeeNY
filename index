function handleAestheticsSection() {
  const intro = document.getElementById('intro-1');
  const container = document.getElementById('aesthetics-container');
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 2800);
}

function handleGoodTimesSection() {
  const intro = document.getElementById('intro-2');
  const container = document.getElementById('goodtimes-container');
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 2800);
}

function handleTweetsSection() {
  const intro = document.getElementById('intro-3');
  const container = document.getElementById('tweets-container');
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
    animatePolaroids();
  }, 2800);
}

function showPolaroid(index) {
  const container = document.getElementById('tweets-container');
  
  if (index >= polaroids.length) {
    showSpotlight();
    return;
  }
  
  currentPolaroid = index;
  
  // Clear container and show the polaroid
  if (!polaroidAnimationPlayed.has(index)) {
    // First time seeing this polaroid - animate it
    container.innerHTML = '';
    const polaroid = document.createElement('div');
    polaroid.className = 'polaroid';
    polaroid.innerHTML = `<img src="${polaroids[index]}" alt="Tweet ${index + 1}">`;
    polaroid.style.animation = 'polaroidEnter 4s ease-in-out forwards';
    container.appendChild(polaroid);
    
    polaroidAnimationPlayed.add(index);
    
    // Auto-advance after animation completes
    setTimeout(() => {
      if (currentPolaroid === index && currentSection === 3) {
        if (currentPolaroid < polaroids.length - 1) {
          showPolaroid(currentPolaroid + 1);
        } else {
          showSpotlight();
        }
      }
    }, 4000);
  } else {
    // Already seen - show it statically
    container.innerHTML = '';
    const polaroid = document.createElement('div');
    polaroid.className = 'polaroid';
    polaroid.innerHTML = `<img src="${polaroids[index]}" alt="Tweet ${index + 1}">`;
    polaroid.style.opacity = '1';
    polaroid.style.transform = 'translate(-50%, -50%) rotate(-2deg)';
    container.appendChild(polaroid);
  }
}

function showSpotlight() {
  const container = document.getElementById('tweets-container');
  isInSpotlight = true;
  
  container.innerHTML = `
    <div class="spotlight-container">
      <div class="spotlight"></div>
      <div class="spotlight-text">And your top tweet of 2025 was…</div>
      <div class="spotlight-tweet">
        <img src="assets/ZeeNYTweet4.png" alt="Top Tweet">
      </div>
    </div>
  `;
}

function animatePolaroids() {
  const container = document.getElementById('tweets-container');
  container.innerHTML = '';
  
  let delay = 0;
  polaroids.forEach((src, i) => {
    setTimeout(() => {
      const polaroid = document.createElement('div');
      polaroid.className = 'polaroid';
      polaroid.innerHTML = `<img src="${src}" alt="Tweet ${i+1}">`;
      polaroid.style.animation = 'polaroidEnter 4s ease-in-out forwards';
      container.appendChild(polaroid);
      
      setTimeout(() => polaroid.remove(), 4000);
    }, delay);
    delay += 4200;
  });
  
  setTimeout(() => {
    container.innerHTML = `
      <div class="spotlight-container">
        <div class="spotlight"></div>
        <div class="spotlight-text">And your top tweet of 2025 was…</div>
        <div class="spotlight-tweet">
          <img src="assets/ZeeNYTweet4.png" alt="Top Tweet">
        </div>
      </div>
    `;
  }, delay);
}

function resetAndShowSongs() {
  const intro = document.getElementById('intro-4');
  const container = document.getElementById('songs-container');
  
  intro.style.display = 'flex';
  container.style.display = 'none';
  container.innerHTML = '';
  
  currentSongPhase = 0;
  if (currentAudio) {
    currentAudio.pause();
    currentAudio = null;
  }
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
    startSongsSequence();
  }, 2800);
}

function startSongsSequence() {
  const container = document.getElementById('songs-container');
  
  container.innerHTML = `
    <div class="podium-container" id="podium">
      <div class="podium-spot third" id="third-spot">
        <div class="song-cover" id="cover-3"></div>
        <div class="podium-block">3</div>
      </div>
      <div class="podium-spot first" id="first-spot">
        <div class="song-cover" id="cover-1"></div>
        <div class="podium-block">1</div>
      </div>
      <div class="podium-spot second" id="second-spot">
        <div class="song-cover" id="cover-2"></div>
        <div class="podium-block">2</div>
      </div>
    </div>
  `;
  
  setTimeout(() => zoomToThird(), 500);
}

function zoomToThird() {
  currentSongPhase = 0;
  const podium = document.getElementById('podium');
  
  // Focus on third place spot (left side)
  podium.style.transform = 'translateX(-20%) scale(1.8)';
  podium.style.bottom = '20vh';
  
  setTimeout(() => {
    const cover = document.getElementById('cover-3');
    cover.innerHTML = '<img src="assets/ZeeNYSongCover3.png" alt="Song 3">';
    cover.classList.add('visible');
    
    currentAudio = new Audio('assets/ZeeNYSong3.mp3');
    currentAudio.play();
    currentAudio.onended = () => {
      // Keep cover visible - don't remove
      setTimeout(() => zoomToSecond(), 800);
    };
  }, 1000);
}

function zoomToSecond() {
  currentSongPhase = 1;
  const podium = document.getElementById('podium');
  
  // Zoom out first
  podium.style.transform = 'translateX(-50%) scale(1)';
  podium.style.bottom = '5vh';
  
  setTimeout(() => {
    // Zoom into second place spot (right side)
    podium.style.transform = 'translateX(-80%) scale(1.8)';
    podium.style.bottom = '20vh';
    
    setTimeout(() => {
      const cover = document.getElementById('cover-2');
      cover.innerHTML = '<img src="assets/ZeeNYSongCover2.png" alt="Song 2">';
      cover.classList.add('visible');
      
      currentAudio = new Audio('assets/ZeeNYSong2.mp3');
      currentAudio.play();
      currentAudio.onended = () => {
        // Keep cover visible - don't remove
        setTimeout(() => showTopSongDarken(), 800);
      };
    }, 1000);
  }, 1200);
}

function showTopSongDarken() {
  currentSongPhase = 2;
  const container = document.getElementById('songs-container');
  
  // Zoom out first
  const podium = document.getElementById('podium');
  podium.style.transform = 'translateX(-50%) scale(1)';
  podium.style.bottom = '5vh';
  
  setTimeout(() => {
    const darken = document.createElement('div');
    darken.className = 'songs-darken';
    darken.innerHTML = '<div class="songs-text">And your top song for 2025 was...<br>(according to me at least)</div>';
    container.appendChild(darken);
    
    setTimeout(() => zoomToFirst(), 3000);
  }, 800);
}

function zoomToFirst() {
  currentSongPhase = 3;
  const container = document.getElementById('songs-container');
  const darken = container.querySelector('.songs-darken');
  if (darken) darken.remove();
  
  const podium = document.getElementById('podium');
  
  // Zoom into first place spot (center)
  podium.style.transform = 'translateX(-50%) scale(2)';
  podium.style.bottom = '25vh';
  
  setTimeout(() => {
    const cover = document.getElementById('cover-1');
    cover.innerHTML = '<img src="assets/ZeeNYSongCover1.png" alt="Song 1">';
    cover.classList.add('visible');
    
    currentAudio = new Audio('assets/ZeeNYSong1.mp3');
    currentAudio.play();
  }, 1000);
}

function handleRecapSection() {
  const intro = document.getElementById('intro-5');
  const container = document.getElementById('recap-container');
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 2800);
}

function resetAndShowForward() {
  const intro = document.getElementById('intro-6');
  const container = document.getElementById('forward-container');
  
  intro.style.display = 'flex';
  container.style.display = 'none';
  
  // Reset boards
  const boards = container.querySelectorAll('.board');
  boards.forEach(board => {
    board.style.animation = 'none';
    board.offsetHeight; // Trigger reflow
    board.style.animation = null;
  });
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 2800);
}

function handleForwardSection() {
  const intro = document.getElementById('intro-6');
  const container = document.getElementById('forward-container');
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 2800);
}

function handleForwardSection() {
  const intro = document.getElementById('intro-5');
  const container = document.getElementById('forward-container');
  
  setTimeout(() => {
    intro.style.display = 'none';
    container.style.display = 'block';
  }, 2800);
}

function nextSection() {
  if (currentSection < totalSections - 1) {
    currentSection++;
    showSection(currentSection);
  }
}

function prevSection() {
  if (currentSection > 0) {
    currentSection--;
    showSection(currentSection);
  }
}

function changeSlide(direction) {
  const slides = document.querySelectorAll('.slide');
  const segments = document.querySelectorAll('.progress-segment');
  
  const oldSlide = currentSlide;
  const newSlide = currentSlide + direction;
  
  // Check boundaries and navigate sections if needed
  if (newSlide < 0) {
    prevSection();
    return;
  } else if (newSlide >= totalSlides) {
    nextSection();
    return;
  }
  
  // Exit current slide
  slides[oldSlide].classList.remove('active');
  slides[oldSlide].classList.add(direction > 0 ? 'exit-left' : 'exit-right');
  
  currentSlide = newSlide;
  
  // Enter new slide
  slides[currentSlide].classList.remove('exit-left', 'exit-right');
  if (direction > 0) {
    slides[currentSlide].classList.add('enter-from-right');
  } else {
    slides[currentSlide].classList.add('enter-from-left');
  }
  
  setTimeout(() => {
    slides[currentSlide].classList.remove('enter-from-right', 'enter-from-left');
    slides[currentSlide].classList.add('active');
  }, 50);
  
  segments.forEach((seg, i) => seg.classList.toggle('active', i === currentSlide));
}

document.getElementById('leftArrow').addEventListener('click', () => {
  const intro = document.querySelector(`#intro-${currentSection}`);
  
  // Handle songs section navigation
  if (currentSection === 4) {
    if (intro && intro.style.display !== 'none') {
      prevSection();
      return;
    }
    
    // Navigate backwards in songs
    if (currentSongPhase === 3) {
      // From first place to second place
      if (currentAudio) {
        currentAudio.pause();
        currentAudio = null;
      }
      currentSongPhase = 1;
      const podium = document.getElementById('podium');
      podium.style.transform = 'translateX(-80%) scale(1.8)';
      
      setTimeout(() => {
        currentAudio = new Audio('assets/ZeeNYSong2.mp3');
        currentAudio.play();
      }, 300);
    } else if (currentSongPhase === 1) {
      // From second place to third place
      if (currentAudio) {
        currentAudio.pause();
        currentAudio = null;
      }
      currentSongPhase = 0;
      const podium = document.getElementById('podium');
      podium.style.transform = 'translateX(-20%) scale(1.8)';
      
      setTimeout(() => {
        currentAudio = new Audio('assets/ZeeNYSong3.mp3');
        currentAudio.play();
      }, 300);
    } else {
      // From third place or intro - go to previous section
      resetAndShowSongs();
    }
    return;
  }
  
  // Handle tweets section navigation
  if (currentSection === 3) {
    if (intro && intro.style.display !== 'none') {
      prevSection();
      return;
    }
    
    if (isInSpotlight) {
      showPolaroid(polaroids.length - 1);
      isInSpotlight = false;
    } else if (currentPolaroid > 0) {
      showPolaroid(currentPolaroid - 1);
    } else {
      prevSection();
    }
    return;
  }
  
  if (intro && intro.style.display !== 'none') {
    prevSection();
  } else if (currentSection === 5) {
    changeSlide(-1);
  } else {
    prevSection();
  }
});

document.getElementById('rightArrow').addEventListener('click', () => {
  const intro = document.querySelector(`#intro-${currentSection}`);
  
  // Handle songs section navigation
  if (currentSection === 4) {
    if (intro && intro.style.display !== 'none') {
      const container = document.getElementById('songs-container');
      intro.style.display = 'none';
      container.style.display = 'block';
      startSongsSequence();
      return;
    }
    
    // Navigate forwards in songs
    if (currentSongPhase === 0) {
      // From third place to second place
      if (currentAudio) {
        currentAudio.pause();
        currentAudio = null;
      }
      // Keep cover-3 visible, just transition
      setTimeout(() => zoomToSecond(), 800);
    } else if (currentSongPhase === 1) {
      // From second place to darken/first place
      if (currentAudio) {
        currentAudio.pause();
        currentAudio = null;
      }
      // Keep cover-2 visible, just transition
      setTimeout(() => showTopSongDarken(), 800);
    } else if (currentSongPhase === 3) {
      // From first place to next section
      if (currentAudio) {
        currentAudio.pause();
        currentAudio = null;
      }
      nextSection();
    }
    return;
  }
  
  // Handle tweets section navigation
  if (currentSection === 3) {
    if (intro && intro.style.display !== 'none') {
      const container = document.getElementById('tweets-container');
      intro.style.display = 'none';
      container.style.display = 'block';
      showPolaroid(0);
      return;
    }
    
    if (isInSpotlight) {
      nextSection();
    } else if (currentPolaroid < polaroids.length - 1) {
      showPolaroid(currentPolaroid + 1);
    } else {
      showSpotlight();
    }
    return;
  }
  
  if (intro && intro.style.display !== 'none') {
    const container = document.getElementById(
      currentSection === 1 ? 'aesthetics-container' :
      currentSection === 2 ? 'goodtimes-container' :
      currentSection === 5 ? 'recap-container' :
      currentSection === 6 ? 'forward-container' : ''
    );
    if (container) {
      intro.style.display = 'none';
      container.style.display = 'block';
      if (currentSection === 1 || currentSection === 2 || currentSection === 6) {
        // Boards already animated on section show
      }
    }
  } else if (currentSection === 5) {
    changeSlide(1);
  } else {
    nextSection();
  }
});

document.addEventListener('keydown', (e) => {
  if (e.key === 'ArrowLeft') {
    document.getElementById('leftArrow').click();
  } else if (e.key === 'ArrowRight') {
    document.getElementById('rightArrow').click();
  } else if (currentSection === 5) {
    if (e.key === 'ArrowUp') prevSection();
    else if (e.key === 'ArrowDown') nextSection();
  }
});

document.getElementById('recap-container').addEventListener('click', (e) => {
  const card = e.currentTarget;
  const rect = card.getBoundingClientRect();
  const clickX = e.clientX - rect.left;
  const halfWidth = rect.width / 2;
  
  if (clickX < halfWidth) {
    changeSlide(-1);
  } else {
    changeSlide(1);
  }
});

function restart() {
  currentSection = 0;
  currentSlide = 0;
  currentPolaroid = 0;
  currentSongPhase = 0;
  polaroidAnimationPlayed.clear();
  isInSpotlight = false;
  
  if (currentAudio) {
    currentAudio.pause();
    currentAudio = null;
  }
  
  showSection(0);
  
  document.querySelectorAll('[id^="intro-"]').forEach(intro => {
    intro.style.display = 'flex';
  });
  document.querySelectorAll('[id$="-container"]').forEach(container => {
    container.style.display = 'none';
  });
  
  const slides = document.querySelectorAll('.slide');
  slides.forEach((s, i) => {
    s.classList.remove('active', 'exit-left', 'exit-right', 'enter-from-left', 'enter-from-right');
    if (i === 0) s.classList.add('active');
  });
  
  const segments = document.querySelectorAll('.progress-segment');
  segments.forEach((seg, i) => seg.classList.toggle('active', i === 0));
}
</script>
</body>
</html>
