    const polaroidImages = [
      'assets/ZeeNYPolaroid1.png', 'assets/ZeeNYPolaroid2.png', 'assets/ZeeNYPolaroid3.png',
      'assets/ZeeNYPolaroid5.png', 'assets/ZeeNYPolaroid6.png', 'assets/ZeeNYPolaroid7.png',
      'assets/ZeeNYPolaroid8.png'
    ];
    const tweetImages = [
      'assets/ZeeNYTweet1.png', 'assets/ZeeNYTweet2.png', 'assets/ZeeNYTweet3.png',
      'assets/ZeeNYTweet5.png', 'assets/ZeeNYTweet6.png', 'assets/ZeeNYTweet7.png',
      'assets/ZeeNYTweet8.png'
    ];

    // Modal state
    let modalImages = [];
    let modalIndex = 0;
    let modalOpen = false;

    // Recap state
    let recapSlide = 0;
    let inRecapSection = false;

    // Tweets state
    let spotlightShown = false;
    let tweetsSectionViewed = false;

    // Initialize
    function init() {
      createPolaroids();
      setupBoardClicks();
      setupRecapClicks();
    }

    // Create polaroids
    function createPolaroids() {
      const container = document.getElementById('polaroid-container');
      container.innerHTML = '';
      polaroidImages.forEach((src, i) => {
        const div = document.createElement('div');
        div.className = 'polaroid';
        div.innerHTML = `<img src="${src}" alt="Polaroid ${i + 1}">`;
        div.dataset.index = i;
        div.onclick = () => openTweetModal(i);
        container.appendChild(div);
      });
      shufflePolaroids();
    }

    function shufflePolaroids() {
      const polaroids = document.querySelectorAll('.polaroid');
      const containerRect = document.getElementById('polaroid-container').getBoundingClientRect();
      const polaroidSize = Math.min(160, window.innerWidth * 0.15);
      
      polaroids.forEach((p, i) => {
        const maxX = containerRect.width - polaroidSize - 100;
        const maxY = containerRect.height - polaroidSize - 100;
        const x = 50 + Math.random() * maxX;
        const y = 50 + Math.random() * maxY;
        const rotation = (Math.random() - 0.5) * 30;
        
        p.style.left = x + 'px';
        p.style.top = y + 'px';
        p.style.transform = `rotate(${rotation}deg)`;
        p.style.opacity = '0';
        
        setTimeout(() => {
          p.style.opacity = '1';
        }, 100 + i * 80);
      });
    }

    // Setup board clicks
    function setupBoardClicks() {
      document.querySelectorAll('.board').forEach(board => {
        board.onclick = () => {
          const section = board.closest('.section').dataset.sec;
          const images = boardImages[section];
          const index = parseInt(board.dataset.index);
          openModal(images, index);
        };
      });
    }

    // Setup recap clicks
    function setupRecapClicks() {
      const container = document.getElementById('recap-container');
      container.onclick = (e) => {
        const rect = container.getBoundingClientRect();
        const clickX = e.clientX - rect.left;
        if (clickX < rect.width / 2) {
          changeRecapSlide(-1);
        } else {
          changeRecapSlide(1);
        }
      };
    }

    function changeRecapSlide(dir) {
      const slides = document.querySelectorAll('.recap-slide');
      const segments = document.querySelectorAll('.progress-segment');
      
      slides[recapSlide].classList.remove('active');
      slides[recapSlide].classList.add('exiting');
      segments[recapSlide].classList.remove('active');
      
      setTimeout(() => {
        slides[recapSlide].classList.remove('exiting');
        recapSlide = (recapSlide + dir + 3) % 3;
        slides[recapSlide].classList.add('active');
        segments[recapSlide].classList.add('active');
      }, 300);
    }

    // Section navigation
    function goToSection(index, skipIntro = false) {
      if (index < 0 || index >= sectionOrder.length) return;
      
      clearTimeout(introTimeout);
      
      const sections = document.querySelectorAll('.section');
      sections.forEach(s => s.classList.remove('active'));
      
      currentSectionIndex = index;
      const secKey = sectionOrder[index];
      const targetSection = document.querySelector(`[data-sec="${secKey}"]`);
      targetSection.classList.add('active');
      
      inRecapSection = secKey === 'recap';
      
      // Handle intro cards
      if (secKey !== 'title' && !skipIntro) {
        showIntro(secKey);
      } else if (secKey !== 'title') {
        hideIntroImmediate(secKey);
        showContent(secKey);
      }
      
      // Handle tweets spotlight
      if (secKey === 'tweets' && !spotlightShown) {
        tweetsSectionViewed = true;
      }
    }

    function showIntro(secKey) {
      const intro = document.getElementById(`intro-${secKey}`);
      if (!intro) {
        showContent(secKey);
        return;
      }
      
      intro.classList.remove('hiding');
      intro.classList.add('showing');
      introShowing = true;
      
      introTimeout = setTimeout(() => {
        hideIntro(secKey);
      }, 3000);
    }

    function hideIntro(secKey) {
      const intro = document.getElementById(`intro-${secKey}`);
      if (!intro) return;
      
      intro.classList.add('hiding');
      
      setTimeout(() => {
        intro.classList.remove('showing', 'hiding');
        introShowing = false;
        showContent(secKey);
      }, 400);
    }

    function hideIntroImmediate(secKey) {
      const intro = document.getElementById(`intro-${secKey}`);
      if (intro) {
        intro.classList.remove('showing', 'hiding');
      }
      introShowing = false;
    }

    function showContent(secKey) {
      // Show boards
      const boardContainer = document.getElementById(`boards-${secKey}`);
      if (boardContainer) {
        const boards = boardContainer.querySelectorAll('.board');
        boards.forEach((b, i) => {
          setTimeout(() => b.classList.add('visible'), i * 150);
        });
      }
      
      // Handle tweets spotlight
      if (secKey === 'tweets' && !spotlightShown) {
        setTimeout(() => {
          showSpotlight();
        }, 5000);
      }
    }

    function showSpotlight() {
      if (sectionOrder[currentSectionIndex] !== 'tweets') return;
      
      const spotlight = document.getElementById('spotlight');
      const image = document.getElementById('spotlight-image');
      
      spotlight.classList.add('active');
      spotlightShown = true;
      
      setTimeout(() => {
        image.classList.add('visible');
      }, 2000);
    }

    function hideSpotlight() {
      const spotlight = document.getElementById('spotlight');
      const image = document.getElementById('spotlight-image');
      spotlight.classList.remove('active');
      image.classList.remove('visible');
    }

    function nextSection() {
      if (introShowing) {
        clearTimeout(introTimeout);
        hideIntroImmediate(sectionOrder[currentSectionIndex]);
        showContent(sectionOrder[currentSectionIndex]);
        return;
      }
      
      if (currentSectionIndex < sectionOrder.length - 1) {
        hideSpotlight();
        goToSection(currentSectionIndex + 1);
      }
    }

    function prevSection() {
      if (introShowing) {
        clearTimeout(introTimeout);
        hideIntroImmediate(sectionOrder[currentSectionIndex]);
        if (currentSectionIndex > 0) {
          goToSection(currentSectionIndex - 1, true);
        }
        return;
      }
      
      if (currentSectionIndex > 0) {
        hideSpotlight();
        // Reset board visibility
        const boardContainer = document.getElementById(`boards-${sectionOrder[currentSectionIndex]}`);
        if (boardContainer) {
          boardContainer.querySelectorAll('.board').forEach(b => b.classList.remove('visible'));
        }
        goToSection(currentSectionIndex - 1);
      }
    }

    // Modal functions
    function openModal(images, index) {
      modalImages = images;
      modalIndex = index;
      modalOpen = true;
      updateModalImage();
      document.getElementById('modal').classList.add('active');
    }

    function openTweetModal(polaroidIndex) {
      openModal(tweetImages, polaroidIndex);
    }

    function updateModalImage() {
      document.getElementById('modal-image').src = modalImages[modalIndex];
    }

    function closeModal() {
      modalOpen = false;
      document.getElementById('modal').classList.remove('active');
    }

    function closeModalOnBackground(e) {
      if (e.target.id === 'modal') {
        closeModal();
      }
    }

    function modalNext(e) {
      e.stopPropagation();
      modalIndex = (modalIndex + 1) % modalImages.length;
      updateModalImage();
    }

    function modalPrev(e) {
      e.stopPropagation();
      modalIndex = (modalIndex - 1 + modalImages.length) % modalImages.length;
      updateModalImage();
    }

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (modalOpen) {
        if (e.key === 'Escape') closeModal();
        if (e.key === 'ArrowLeft') modalPrev(e);
        if (e.key === 'ArrowRight') modalNext(e);
        return;
      }
      
      if (inRecapSection) {
        if (e.key === 'ArrowLeft') changeRecapSlide(-1);
        if (e.key === 'ArrowRight') changeRecapSlide(1);
        if (e.key === 'ArrowUp') prevSection();
        if (e.key === 'ArrowDown') nextSection();
        return;
      }
      
      if (e.key === 'ArrowLeft') prevSection();
      if (e.key === 'ArrowRight') nextSection();
      if (e.key.toLowerCase() === 'r' && sectionOrder[currentSectionIndex] === 'tweets') {
        shufflePolaroids();
      }
    });

    // Initialize on load
    init();
  </script>
</body>
</html>
