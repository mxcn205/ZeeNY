<body>
  <div class="app" id="app">
    <div class="progress" id="progress" aria-hidden="true"></div>

    <div class="stage" role="region" aria-label="Wrapped recap slides">
      <!-- slides injected here -->
      <div class="tapzone" aria-hidden="false">
        <button id="tapPrev" aria-label="Previous slide"></button>
        <button id="tapNext" aria-label="Next slide"></button>
      </div>

      <div class="hint" aria-hidden="true">
        <span class="pill">← / click left</span>
        <span class="pill">→ / click right</span>
      </div>
    </div>
  </div>

  <script>
    /**
     * TEXT CONTENT — EDIT THESE
     * Keep it “wrapped-ish”: playful, approximate, not time-stamped.
     */
    const DATA = {
      byTheNumbers: {
        kicker: "By the Numbers",
        title: "This year, in soft stats.",
        subtitle: "Not tracked. Just remembered.",
        items: [
          { label: "Time zones crossed", value: "1" },
          { label: "Comfortable silences", value: "more than expected" },
          { label: "Check-ins with no pressure", value: "a lot" },
          { label: "Hard conversations survived", value: "all of them" },
          { label: "Times we chose patience", value: "countless" }
        ],
        big: { num: "∞", desc: "Small moments that mattered anyway." }
      },

      mostReplayed: {
        kicker: "Most Replayed Moments",
        title: "The highlights we kept coming back to.",
        subtitle: "No rankings needed. Just the ones that repeated.",
        tracks: [
          { label: "Late-night tired calls", value: "REPEAT" },
          { label: "Sending something small instead of saying something big", value: "REPEAT" },
          { label: "Comfortable silence", value: "REPEAT" },
          { label: "Taking space, then coming back", value: "REPEAT" },
          { label: "Laughing at nothing", value: "REPEAT" }
        ]
      },

      mostUsedWords: {
        kicker: "Most Used Words",
        title: "Unofficial, but accurate.",
        subtitle: "If our year had a vocabulary.",
        words: [
          { t: "okay", c: "w1" },
          { t: "tired", c: "w2" },
          { t: "yeah", c: "w2" },
          { t: "later", c: "w3" },
          { t: "i'm here", c: "w2" },
          { t: "no pressure", c: "w3" },
          { t: "goodnight", c: "w3" },
          { t: "miss you", c: "w2" },
          { t: "❤️", c: "w1" },
          { t: "lol", c: "w4" },
          { t: "same", c: "w4" },
          { t: "safe", c: "w3" }
        ]
      }
    };

    const slides = [
      makeByTheNumbersSlide(DATA.byTheNumbers),
      makeMostReplayedSlide(DATA.mostReplayed),
      makeMostUsedWordsSlide(DATA.mostUsedWords)
    ];

    const stage = document.querySelector(".stage");
    const progress = document.getElementById("progress");
    const tapPrev = document.getElementById("tapPrev");
    const tapNext = document.getElementById("tapNext");

    let index = 0;
    let busy = false;

    // progress segments
    function buildProgress(){
      progress.innerHTML = "";
      for(let i=0;i<slides.length;i++){
        const seg = document.createElement("div");
        seg.className = "seg";
        const fill = document.createElement("i");
        seg.appendChild(fill);
        progress.appendChild(seg);
      }
    }

    function setProgress(activeIdx){
      const segs = [...progress.querySelectorAll(".seg > i")];
      segs.forEach((fill, i) => {
        fill.style.width = (i < activeIdx) ? "100%" : (i === activeIdx ? "100%" : "0%");
        fill.style.opacity = (i <= activeIdx) ? "1" : ".55";
      });
    }

    function mountSlides(){
      slides.forEach(s => stage.appendChild(s));
      slides[0].classList.add("active","enter");
      setTimeout(()=>slides[0].classList.remove("enter"), 650);
      setProgress(0);
    }

    function goTo(nextIdx){
      if (busy) return;
      if (nextIdx < 0) nextIdx = slides.length - 1;
      if (nextIdx >= slides.length) nextIdx = 0;
      if (nextIdx === index) return;

      busy = true;

      const current = slides[index];
      const next = slides[nextIdx];

      // exit current
      current.classList.remove("enter");
      current.classList.add("exit");
      current.classList.remove("active");

      // enter next
      next.classList.remove("exit");
      next.classList.add("active","enter");

      setProgress(nextIdx);

      // cleanup after animations
      const outMs = prefersReducedMotion() ? 0 : 460;
      const inMs  = prefersReducedMotion() ? 0 : 620;

      setTimeout(() => current.classList.remove("exit"), outMs);
      setTimeout(() => {
        next.classList.remove("enter");
        index = nextIdx;
        busy = false;
      }, Math.max(outMs, inMs));
    }

    function next(){ goTo(index + 1); }
    function prev(){ goTo(index - 1); }

    function prefersReducedMotion(){
      return window.matchMedia && window.matchMedia("(prefers-reduced-motion: reduce)").matches;
    }

    // interactions
    tapNext.addEventListener("click", next);
    tapPrev.addEventListener("click", prev);

    window.addEventListener("keydown", (e) => {
      if (e.key === "ArrowRight" || e.key === " "){ e.preventDefault(); next(); }
      if (e.key === "ArrowLeft"){ e.preventDefault(); prev(); }
    }, { passive:false });

    // Build slide DOM
    function el(tag, className, text){
      const n = document.createElement(tag);
      if (className) n.className = className;
      if (text !== undefined) n.textContent = text;
      return n;
    }

    function makeByTheNumbersSlide(d){
      const s = el("section","slide");
      s.appendChild(el("div","kicker", d.kicker));
      s.appendChild(el("h1","title", d.title));
      s.appendChild(el("p","subtitle", d.subtitle));

      // big stat
      const big = el("div","bigStat");
      big.appendChild(el("p","num", d.big.num));
      big.appendChild(el("p","desc", d.big.desc));
      s.appendChild(big);

      const list = el("div","list");
      d.items.forEach(it => {
        const r = el("div","row");
        r.appendChild(el("div","label", it.label));
        r.appendChild(el("div","value", it.value));
        list.appendChild(r);
      });
      s.appendChild(list);

      return s;
    }

    function makeMostReplayedSlide(d){
      const s = el("section","slide");
      s.appendChild(el("div","kicker", d.kicker));
      s.appendChild(el("h1","title", d.title));
      s.appendChild(el("p","subtitle", d.subtitle));

      const list = el("div","list");
      d.tracks.forEach((t, i) => {
        const r = el("div","row");
        r.appendChild(el("div","label", `${i+1}. ${t.label}`));
        r.appendChild(el("div","value", t.value));
        list.appendChild(r);
      });
      s.appendChild(list);

      return s;
    }

    function makeMostUsedWordsSlide(d){
      const s = el("section","slide");
      s.appendChild(el("div","kicker", d.kicker));
      s.appendChild(el("h1","title", d.title));
      s.appendChild(el("p","subtitle", d.subtitle));

      const cloud = el("div","wordCloud");
      d.words.forEach(w => {
        const chip = el("span", `word ${w.c}`, w.t);
        cloud.appendChild(chip);
      });
      s.appendChild(cloud);

      return s;
    }

    // init
    buildProgress();
    mountSlides();
  </script>
</body>
</html>
